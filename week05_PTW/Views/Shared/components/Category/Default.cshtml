@model List<week05_PTW.Data.Categories>


    <div class="dropdown-menu">
        <nav class="side-nav">
            <ul class="menu-vertical sf-arrows">
            @foreach (var c in Model)
            {
                <li><a asp-action="List" asp-controller="Product" asp-route-categoryID="@c.Id">@c.Name</a></li>
            }
            </ul><!-- End .menu-vertical -->
        </nav><!-- End .side-nav -->
    </div>

    <!-- End .dropdown-menu -->
